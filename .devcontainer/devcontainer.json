// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"features": {
		"ghcr.io/va-h/devcontainers-features/uv:1": {},
		"ghcr.io/devcontainers-extra/features/curl-apt-get:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"usernamehw.errorlens",
				"yzhang.markdown-all-in-one",
				"redhat.vscode-yaml",
				"streetsidesoftware.code-spell-checker",
				"github.vscode-github-actions",
				"vivaxy.vscode-conventional-commits",
				"ms-vscode-remote.remote-containers"
			]
		}
	},
	// Install requirements after container creation
	"postCreateCommand": [
		"pip3 install -r .devcontainer/requirements_dev.txt",
		"pip3 install -r .devcontainer/requirements_docs.txt",
		"curl -sSL https://github.com/orhun/git-cliff/releases/latest/download/git-cliff-linux-x86_64.tar.gz | tar -xz -C /usr/local/bin git-cliff"
	]
}